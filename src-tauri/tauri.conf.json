{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "build": {
        "beforeBuildCommand": "npm run build",
        "beforeDevCommand": "npm run dev",
        "frontendDist": "../dist",
        "devUrl": "http://localhost:3100"
    },
    "bundle": {
        "active": true,
        "category": "Education",
        "copyright": "",
        "targets": "all",
        "externalBin": [],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "windows": {
            "certificateThumbprint": null,
            "digestAlgorithm": "sha256",
            "timestampUrl": ""
        },
        "longDescription": "",
        "macOS": {
            "entitlements": null,
            "exceptionDomain": "",
            "frameworks": [],
            "providerShortName": null,
            "signingIdentity": null
        },
        "resources": [
            "./resources/entry.js",
            "./resources/text-detection.rten",
            "./resources/text-recognition.rten"
        ],
        "shortDescription": "",
        "linux": {
            "deb": {
                "depends": []
            }
        }
    },
    "productName": "Beluga",
    "mainBinaryName": "Beluga",
    "version": "1.1.4",
    "identifier": "com.youginil.beluga",
    "plugins": {},
    "app": {
        "windows": [
            {
                "fullscreen": false,
                "height": 600,
                "resizable": true,
                "title": "Beluga",
                "width": 900
            }
        ],
        "trayIcon": {
            "iconPath": "../public/beluga.png",
            "iconAsTemplate": true
        },
        "security": {
            "csp": null
        }
    }
}
